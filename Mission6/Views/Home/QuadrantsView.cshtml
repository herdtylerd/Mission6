@model List<AddTask>

<div class="container">
    
    <div class="row">
        <div class="col-2"></div>
        <div class="col-5 text-center"><h4>Urgent</h4></div>
        <div class="col-5 text-center"><h4>Not Urgent</h4></div>
    </div>
    <div class="row">
        <div class="col-2"><h4>Important</h4></div>
        <div class="col border rounded text-center">

            <table class="text-center">
                <tr>Quadrant 1</tr>
                @foreach (var x in Model.Where(y => y.Quadrant == 1))
                {
            <tr>
                <td>@x.Task</td>
                <td class="text-center"><a asp-controller="Home" asp-action="EditTask" asp-route-taskid="@x.TaskId">Edit |</a></td>
                <td><a asp-controller="Home" asp-action="Delete" asp-route-taskid="@x.TaskId">   Delete</a></td>
            </tr >
                }
            </table>

        </div>
        <div class="col border rounded text-center">
            <table>
                <tr>Quadrant 2</tr>
                @foreach (var x in Model.Where(y => y.Quadrant == 2))
                {
                    <tr>
                        <td>@x.Task</td>
