                        <td><a asp-controller="Home" asp-action="Delete" asp-route-taskid="@x.TaskId">   Delete</a></td>
                    </tr>
                }
            </table>

        </div>
        <div class="col border rounded text-center">
            <table>
                <tr>Quadrant 4</tr>
                @foreach (var x in Model.Where(y => y.Quadrant == 4))
                {
                    <tr>
                        <td>@x.Task</td>
                        <td class="text-center"><a asp-controller="Home" asp-action="EditTask" asp-route-taskid="@x.TaskId">Edit |</a></td>
                        <td><a asp-controller="Home" asp-action="Delete" asp-route-taskid="@x.TaskId">   Delete</a></td>
