@{
    ViewData["Title"] = "Confirm Deletion";
}

@model AddTask;

<div class="container">
    <form method="post">
        <h3>Are you sure you want to delete the following task?</h3>
        <h5>@Model.Task</h5>
        <input type="submit" class="btn btn-primary" value="Delete" /><br /><br />
        <a class="btn btn-primary" asp-controller="Home" asp-action="QuadrantsView">Cancel</a>

        <input type="hidden" asp-for="TaskId" />
    </form>

</div>