@{
    ViewData["Title"] = "Add Task";
}


@model Mission6.Models.AddTask


<div>
    <form method="post">
        <div asp-validation-summary="All"></div>

        <!-- Task, due date, quadrant,
        Category (Dropdown: Home, School,
        work, Church), Completed (True/False)-->

        <input type="hidden" asp-for="TaskId" />

        <label asp-for="Task">Task</label>
        <input type="text" asp-for="Task" /><br />

        <label asp-for="DueDate">Due Date</label>
        <input type="date" asp-for="DueDate" /><br />

        <label asp-for="Quadrant">Quadrant</label>
        <select asp-for="Quadrant">
            <option value="">Select an option</option>
            <option value="1">
                Quadrant I: Important / Urgent
            </option>
            <option value="2">
                Quadrant II: Important / Not Urgent
            </option>
            <option value="3">
                Quadrant III: Not Important / Urgent
            </option>
            <option value="4">
                Quadrant IV: Not Important / Not Urgent
            </option>
        </select><br />


        <label asp-for="CategoryId">Category</label>
        <select asp-for="CategoryId">
            <option value="">Select a Category</option>
            @foreach (Category c in ViewBag.Categories)
            {
                <option value="@c.CategoryId">@c.CategoryName</option>
            }
          
        </select><br />

        <label asp-for="Completed">Completed</label>
        <select asp-for="Completed">
            <option value="">Select an option</option>
            <option value="true">True</option>
            <option value="false">False</option>
        </select><br />

        <input type="submit" value="Add Task" class="btn btn-primary" />
    </form>
</div>