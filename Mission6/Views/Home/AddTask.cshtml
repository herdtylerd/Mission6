@{
    ViewData["Title"] = "Add Task";
}

<div>
    <form method="post">
        <div asp-validation-summary="All"></div>

        <!-- Task, due date, quadrant,
    Category (Dropdown: Home, School,
    work, Church), Completed (True/False)-->
        <label @*asp-for="Task"*@>Task</label>
        <input type="text" @*asp-for="Task"*@ /><br />

        <label @*asp-for="DueDate"*@>Due Date</label>
        <input type="date" @*asp-for="DueDate"*@ /><br />

        <label @*asp-for="Quadrant"*@>Quadrant</label>
        <select @*asp-for="Quadrant"*@>
            <option value="">Select an option</option>
            <option value="Quadrant I">
                Quadrant I: Important / Urgent
            </option>
            <option value="Quadrant II">
                Quadrant II: Important / Not Urgent
            </option>
            <option value="Quadrant III">
                Quadrant III: Not Important / Urgent
            </option>
            <option value="Quadrant IV">
                Quadrant IV: Not Important / Not Urgent
            </option>
        </select><br />

        <label @*asp-for="Category"*@>Category</label>
        <select @*asp-for="Category"*@>
            <option value="">Select an option</option>
            <option value="Home">Home</option>
            <option value="School">School</option>
            <option value="Work">Work</option>
            <option value="Church">Church</option>
        </select><br />

        <label @*asp-for="Completed"*@>Completed</label>
        <select @*asp-for="Completed"*@>
            <option value="">Select an option</option>
            <option value="true">True</option>
            <option value="false">False</option>
        </select><br />

        <input type="submit" value="Add Task" asp-controller="Home" asp-action="Add Task" class="btn btn-primary"/>
    </form>
</div>